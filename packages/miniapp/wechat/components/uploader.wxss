/* 上传组件样式 */
.file-uploader {
  width: 100%;
}

/* 上传按钮 */
.upload-button {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  width: 160rpx;
  height: 160rpx;
  margin-bottom: 20rpx;
  border: 2rpx dashed #dcdfe6;
  border-radius: 8rpx;
  background-color: #f5f7fa;
}

.upload-button.disabled {
  opacity: 0.5;
  pointer-events: none;
}

.upload-icon {
  font-size: 60rpx;
  font-weight: 100;
  color: #c0c4cc;
  line-height: 1;
}

.upload-text {
  margin-top: 10rpx;
  font-size: 24rpx;
  color: #909399;
}

/* 文件列表 */
.file-list {
  width: 100%;
}

.file-item {
  display: flex;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #ebeef5;
}

.file-icon {
  width: 80rpx;
  height: 80rpx;
  margin-right: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: #f0f0f0;
  border-radius: 8rpx;
  overflow: hidden;
}

.file-thumbnail {
  width: 100%;
  height: 100%;
}

.file-type-icon {
  font-size: 24rpx;
  color: #606266;
  text-transform: uppercase;
}

.file-info {
  flex: 1;
  overflow: hidden;
}

.file-name {
  font-size: 28rpx;
  color: #303133;
  margin-bottom: 6rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.file-size {
  font-size: 24rpx;
  color: #909399;
  margin-bottom: 6rpx;
}

.file-status {
  width: 100%;
}

.progress-bar {
  height: 4rpx;
  background-color: #ebeef5;
  border-radius: 2rpx;
  overflow: hidden;
  margin-bottom: 6rpx;
}

.progress-inner {
  height: 100%;
  background-color: #409eff;
  transition: width 0.2s;
}

.status-text {
  font-size: 22rpx;
}

.status-ready {
  color: #909399;
}

.status-uploading {
  color: #409eff;
}

.status-success {
  color: #67c23a;
}

.status-fail {
  color: #f56c6c;
}

.status-pause {
  color: #e6a23c;
}

.file-actions {
  display: flex;
  margin-left: 20rpx;
}

.action-btn {
  width: 50rpx;
  height: 50rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-left: 10rpx;
}

.action-icon {
  font-size: 28rpx;
  color: #909399;
}

.delete-btn .action-icon {
  color: #f56c6c;
}

.retry-btn .action-icon {
  color: #409eff;
}

/* 上传状态信息 */
.upload-status {
  margin-top: 20rpx;
  font-size: 24rpx;
  color: #909399;
  text-align: right;
}