/**
 * 文件上传页面样式
 */

/* 容器 */
.file-upload-container {
  padding: 30rpx;
  background-color: #f8f8f8;
  min-height: 100vh;
  box-sizing: border-box;
}

/* 头部区域 */
.header {
  text-align: center;
  padding: 20rpx 0 40rpx;
}

.title {
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
}

.subtitle {
  font-size: 28rpx;
  color: #888;
  margin-top: 10rpx;
}

/* 上传区域 */
.upload-section {
  background-color: #fff;
  padding: 30rpx;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
  margin-bottom: 30rpx;
}

/* 操作按钮 */
.action-buttons {
  display: flex;
  justify-content: space-between;
  margin-bottom: 30rpx;
}

.button {
  flex: 1;
  margin: 0 10rpx;
  font-size: 28rpx;
}

.button:first-child {
  margin-left: 0;
}

.button:last-child {
  margin-right: 0;
}

/* 上传控制区域 */
.upload-controls {
  background-color: #fff;
  padding: 20rpx;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
  margin-bottom: 30rpx;
}

.progress-bar-container {
  margin-bottom: 20rpx;
}

.progress-text {
  font-size: 24rpx;
  color: #888;
  margin-bottom: 10rpx;
}

.control-buttons {
  display: flex;
  justify-content: space-around;
  margin-top: 20rpx;
}

/* 文件列表 */
.file-list-section {
  background-color: #fff;
  padding: 30rpx;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
  margin-bottom: 30rpx;
}

.section-title {
  font-size: 30rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 20rpx;
  border-bottom: 1rpx solid #eee;
  padding-bottom: 15rpx;
}

.file-list {
  max-height: 600rpx;
  overflow-y: auto;
}

.file-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.file-info {
  flex: 1;
  overflow: hidden;
  margin-right: 20rpx;
}

.file-name {
  font-size: 28rpx;
  color: #333;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  margin-bottom: 10rpx;
}

.file-status {
  font-size: 24rpx;
  color: #999;
}

.status-text {
  display: inline-block;
  margin-bottom: 5rpx;
}

.status-text.uploading {
  color: #1989fa;
}

.status-text.success {
  color: #07c160;
}

.status-text.error {
  color: #ee0a24;
}

.file-actions {
  display: flex;
  flex-direction: column;
}

.action-btn {
  margin: 5rpx 0;
  min-width: 120rpx;
  font-size: 20rpx;
}

/* 云开发配置 */
.cloud-section {
  background-color: #fff;
  padding: 30rpx;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
  margin-bottom: 30rpx;
}

.cloud-info {
  margin-bottom: 20rpx;
}

.cloud-status,
.cloud-env {
  font-size: 28rpx;
  margin-bottom: 10rpx;
}

.label {
  color: #666;
}

.enabled {
  color: #07c160;
  font-weight: 500;
}

.disabled {
  color: #999;
}

/* 页脚 */
.footer {
  text-align: center;
  padding: 30rpx 0;
}

.footer-text {
  font-size: 24rpx;
  color: #999;
}

/* 文件上传页面样式 */

.upload-container {
  padding: 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

/* 头部样式 */
.header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 0;
  margin-bottom: 30rpx;
  border-bottom: 1px solid #eeeeee;
}

.title {
  font-size: 40rpx;
  font-weight: bold;
  color: #333;
}

.actions {
  display: flex;
}

.action-btn {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: #f0f0f0;
  border-radius: 50%;
}

/* 上传面板 */
.upload-panel {
  background-color: #ffffff;
  border-radius: 12rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.buttons-row {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
  margin-bottom: 20rpx;
}

.btn {
  flex: 1;
  min-width: 140rpx;
  font-size: 28rpx;
  padding: 16rpx 0;
  border-radius: 8rpx;
  text-align: center;
  color: white;
}

.btn-primary {
  background-color: #2d8cf0;
}

.btn-success {
  background-color: #19be6b;
}

.btn-warning {
  background-color: #ff9900;
}

.btn-danger {
  background-color: #ed3f14;
}

/* 选项面板 */
.options-panel {
  margin-top: 20rpx;
  padding-top: 20rpx;
  border-top: 1px solid #eeeeee;
}

.option-item {
  display: flex;
  justify-content: space-between;
  margin-bottom: 16rpx;
}

.option-label {
  font-size: 28rpx;
  color: #666;
}

.option-value {
  font-size: 28rpx;
  color: #333;
}

/* 文件列表样式 */
.file-list {
  background-color: #ffffff;
  border-radius: 12rpx;
  padding: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.file-item {
  padding: 20rpx 0;
  border-bottom: 1px solid #f2f2f2;
}

.file-item:last-child {
  border-bottom: none;
}

.file-info {
  margin-bottom: 16rpx;
}

.file-name {
  font-size: 30rpx;
  color: #333;
  margin-bottom: 10rpx;
  word-break: break-all;
}

.file-meta {
  display: flex;
  justify-content: space-between;
  font-size: 24rpx;
  color: #999;
}

.file-status {
  padding: 4rpx 10rpx;
  border-radius: 6rpx;
  background-color: #f0f0f0;
}

.file-status.success {
  background-color: #e8f7f0;
  color: #19be6b;
}

.file-status.error {
  background-color: #ffefef;
  color: #ed3f14;
}

.file-status.uploading {
  background-color: #e8f3fc;
  color: #2d8cf0;
}

/* 进度条 */
.progress-bar {
  height: 10rpx;
  background-color: #f2f2f2;
  border-radius: 10rpx;
  overflow: hidden;
  margin-bottom: 16rpx;
}

.progress-inner {
  height: 100%;
  background-color: #2d8cf0;
  border-radius: 10rpx;
  transition: width 0.3s;
}

/* 文件操作按钮 */
.file-actions {
  display: flex;
  justify-content: flex-end;
  gap: 20rpx;
}

.file-action {
  width: 50rpx;
  height: 50rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: #f7f7f7;
  border-radius: 8rpx;
}

.file-action.delete {
  background-color: #ffefef;
}

/* 空状态提示 */
.empty-tip {
  padding: 60rpx 0;
  text-align: center;
  color: #999;
  font-size: 28rpx;
}

/* 字体图标 */
@font-face {
  font-family: 'iconfont';
  src: url('data:application/font-woff2;charset=utf-8;base64,');
}

.iconfont {
  font-family: 'iconfont' !important;
  font-size: 40rpx;
  font-style: normal;
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
}

.icon-setting::before {
  content: '\e68f';
}

.icon-preview::before {
  content: '\e7b9';
}

.icon-share::before {
  content: '\e60d';
}

.icon-delete::before {
  content: '\e67e';
}
